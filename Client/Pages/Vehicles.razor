            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

            header h1 {
                margin-bottom: 20px;
            }

        /* Reset default browser styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        .container {
            max-width: 960px;
            margin: 0 auto;
            padding: 20px;
        }

        .inventory {
            background: #d8d6d6; /* Equivalent to var(--mainGrey) */
        }

        .car-card {
            border-radius: 0 !important;
        }

        .car-img {
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

        .car-value {
            background: #40acf1; /* Equivalent to var(--mainBlue) */
            color: #fff; /* Equivalent to var(--mainWhite) */
            clip-path: polygon(15% 0,85% 0,100% 100%,0 100%);
            transition: all 1s linear;
        }

            .car-value:hover {
                clip-path: polygon(0% 0,100% 0,100% 100%,0 100%);
            }

        .btn {
            padding: 0.5rem 1rem;
            border: 1px solid #ccc;
            background: transparent;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn:hover {
                background: #ccc;
            }

        .btn-outline-secondary {
            color: #333;
            border-color: #333;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -15px;
        }

        .col {
            flex: 1;
            padding: 0 15px;
        }

        .col-10 {
            flex: 0 0 83.33333%;
            max-width: 83.33333%;
        }

        .col-md-12, .col-md-6, .col-lg-4 {
            flex: 0 0 auto;
        }

        .col-md-12 {
            flex-basis: 100%;
            max-width: 100%;
        }

        .col-md-6 {
            flex-basis: 50%;
            max-width: 50%;
        }

        .col-lg-4 {
            flex-basis: 33.33333%;
            max-width: 33.33333%;
        }

        .d-flex {
            display: flex;
        }

        .justify-content-center {
            justify-content: center;
        }

        .justify-content-end {
            justify-content: flex-end;
        }

        .align-self-center {
            align-self: center;
        }

        .py-5 {
            padding-top: 3rem !important;
            padding-bottom: 3rem !important;
        }

        .my-3 {
            margin-top: 1rem !important;
            margin-bottom: 1rem !important;
        }

        .mb-5 {
            margin-bottom: 3rem !important;
        }

        .text-uppercase {
            text-transform: uppercase !important;
        }

        .font-weight-bold {
            font-weight: 700 !important;
        }

        .section-title--special {
            color: #40acf1; /* Equivalent to var(--mainBlue) */
        }

        .text-capitalize {
            text-transform: capitalize !important;
        }

        .fas {
            margin-right: 5px;
        }
    </style>
</head>
