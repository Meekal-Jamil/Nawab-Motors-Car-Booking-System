@inject HttpClient Http
@using System.Net.Http


@page "/mercedes"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Details</title>
    <style>
        /* Reset default browser styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            padding: 20px;
        }

        .container {
            max-width: 960px;
            margin: 0 auto;
        }

        .car-details {
            display: flex;
            align-items: center;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            overflow: hidden;
        }

            .car-details img {
                max-width: 50%;
                border-radius: 10px 0 0 10px;
                height: auto;
            }

        .car-info {
            flex: 1;
            padding: 20px;
        }

            .car-info h2 {
                font-size: 2rem;
                font-weight: 600;
                margin-bottom: 10px;
            }

            .car-info p {
                margin-bottom: 15px;
                line-height: 1.6;
            }

            .car-info strong {
                color: #555;
            }

            .car-info ul {
                margin-left: 20px;
            }

                .car-info ul li {
                    margin-bottom: 5px;
                }

        .butt {
            text-align: center;
            margin-top: 20px;
        }

            .butt button {
                background-color: #33a1c1;
                border: none;
                color: white;
                padding: 10px 30px;
                font-size: 20px;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .butt button:hover {
                    background-color: #1a768b;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="car-details">
            <img src="car-german-1.jpeg" alt="Mercedes AMG GT">

            <div class="car-info">
                <h2>Mercedes AMG GT</h2>
                <p><strong>Model:</strong> 2023</p>
                <p><strong>Color:</strong> Grey</p>
                <p><strong>Engine:</strong> 4.0L V8</p>
                <p><strong>Transmission:</strong> Automatic</p>
                <p><strong>Fuel Type:</strong> Petrol</p>
                <p><strong>Features:</strong></p>
                <ul>
                    <li>AMG Performance Exhaust System</li>
                    <li>Dynamic Select Driving Modes</li>
                    <li>High-Performance Composite Braking System</li>
                    <li>10.25-inch Multimedia Display</li>
                    <li>Panoramic Roof</li>
                </ul>
                <p><strong>Description:</strong> The Mercedes AMG GT is a high-performance sports car that combines stunning design with exhilarating performance. With its powerful engine and advanced technology, it delivers an unmatched driving experience.</p>
            </div>
        </div>
    </div>
    <div class="butt">
        <button onclick="window.location.href='/services'">Buy Now</button>
    </div>
</body>
</html>

